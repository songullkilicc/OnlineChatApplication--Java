<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.gui.LoginController"
      spacing="15" alignment="CENTER"
      style="-fx-padding: 40; -fx-background-color: #1e1e2e;">

    <Text text="ðŸ’¬ ChatApp" style="-fx-fill: white; -fx-font-size: 28; -fx-font-weight: bold;"/>
    <Text text="Welcome back!" style="-fx-fill: #aaaaaa; -fx-font-size: 14;"/>

    <VBox spacing="8" maxWidth="300">
        <Label text="Username" style="-fx-text-fill: white;"/>
        <TextField fx:id="usernameField" promptText="Enter username"
                   style="-fx-background-color: #2e2e3e; -fx-text-fill: white; -fx-prompt-text-fill: #888; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>

        <Label text="Password" style="-fx-text-fill: white;"/>
        <PasswordField fx:id="passwordField" promptText="Enter password"
                       style="-fx-background-color: #2e2e3e; -fx-text-fill: white; -fx-prompt-text-fill: #888; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>

        <Label fx:id="errorLabel" text="" style="-fx-text-fill: #ff6b6b; -fx-font-size: 12;"/>

        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" maxWidth="Infinity"
                style="-fx-background-color: #7c3aed; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;"/>

        <Button fx:id="registerButton" text="Create Account" onAction="#handleRegister" maxWidth="Infinity"
                style="-fx-background-color: transparent; -fx-text-fill: #7c3aed; -fx-border-color: #7c3aed; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10; -fx-cursor: hand;"/>
    </VBox>
</VBox>